{
  "tests": [
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "Valid lead submission",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Иван Петров",
        "company": "ТОО Строй",
        "phone": "+7 777 123 4567",
        "email": "ivan@example.kz",
        "interest": "Запросить прайс-лист CIF"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Missing required phone",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Тест",
        "phone": "",
        "interest": "Тест"
      },
      "expectedStatus": 422
    }
  ]
}
